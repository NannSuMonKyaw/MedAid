<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardCornerRadius="@dimen/card_corner_xlarge"
    android:elevation="@dimen/card_elevation">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_10"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_margin="@dimen/margin_small"
                android:layout_centerInParent="true"
                />


            <ImageButton
                android:id="@+id/img_btn_close"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:scaleType="fitXY"
                android:src="@drawable/icon_cancel"
                android:background="@color/transparent"
                android:layout_margin="@dimen/margin_small"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                 />
            </RelativeLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_10"
                android:text="Are you sure you chose all your symptoms?"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/txt_size_x_large"
                android:textStyle="bold"
                android:layout_margin="@dimen/margin_small"
                />

            <LinearLayout
                android:id="@+id/symptom_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:padding="@dimen/padding_6">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You chose the following symptoms from a particular body part :"
                    android:textColor="@color/colorGray"
                    android:padding="@dimen/padding_4"
                    android:layout_margin="@dimen/margin_small"
                    />
                <LinearLayout
                    android:id="@+id/ly_head_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HEAD"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/dancing_script_bold"
                        android:textSize="@dimen/txt_size_x_large"
                        android:padding="@dimen/padding_4"
                        android:layout_margin="@dimen/margin_small"
                        android:visibility="visible"
                        />
                    <TextView
                        android:id="@+id/tv_head_symptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/txt_size_large"
                        android:padding="@dimen/padding_4"
                        android:text=""
                        android:layout_marginHorizontal="@dimen/margin_large"
                        android:visibility="visible"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_body_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BODY"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/dancing_script_bold"
                        android:textSize="@dimen/txt_size_x_large"
                        android:padding="@dimen/padding_4"
                        android:layout_margin="@dimen/margin_small"
                        android:visibility="visible"
                        />
                    <TextView
                        android:id="@+id/tv_body_symptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/share_regular"
                        android:textSize="@dimen/txt_size_large"
                        android:padding="@dimen/padding_4"
                        android:text=""
                        android:layout_marginHorizontal="@dimen/margin_large"
                        android:visibility="visible"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_skin_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SKIN"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/dancing_script_bold"
                        android:textSize="@dimen/txt_size_x_large"
                        android:padding="@dimen/padding_4"
                        android:layout_margin="@dimen/margin_small"
                        android:visibility="visible"
                        />
                    <TextView
                        android:id="@+id/tv_skin_symptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/share_regular"
                        android:textSize="@dimen/txt_size_large"
                        android:padding="@dimen/padding_4"
                        android:text=""
                        android:layout_marginHorizontal="@dimen/margin_large"
                        android:visibility="visible"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_other_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OTHER SYMPTOMS "
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/dancing_script_bold"
                        android:textSize="@dimen/txt_size_x_large"
                        android:padding="@dimen/padding_4"
                        android:layout_margin="@dimen/margin_small"
                        />
                    <TextView
                        android:id="@+id/tv_other_symptoms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/share_regular"
                        android:textSize="@dimen/txt_size_large"
                        android:padding="@dimen/padding_4"
                        android:text=""
                        android:layout_marginHorizontal="@dimen/margin_large"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_10"
                    >
                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_size"
                        android:background="@drawable/btn_shape_round"
                        android:text="no"
                        android:textColor="@color/colorPrimary"
                        android:layout_toLeftOf="@+id/btn_ok"
                        android:layout_margin="@dimen/margin_small"


                        />
                    <Button
                        android:id="@+id/btn_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_size"
                        android:background="@drawable/btn_shape_round"
                        android:text="yes"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_small"

                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/no_symptom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/empty"
                    android:scaleType="fitXY"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/share_regular"
                    android:padding="@dimen/padding_10"
                    android:text="You Choose Nothing!!"
                    android:textColor="@color/colorPrimary"
                    android:layout_margin="@dimen/margin_large"
                    android:textSize="@dimen/txt_size_ex_large"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>

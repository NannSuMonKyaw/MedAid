<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.CreateMedicineAlarmActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:padding="@dimen/padding_10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medication"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/txt_size_x_large"
                android:textColor="@color/colorBlack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_medicine_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:hint="Medication Name"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:layout_margin="@dimen/margin_small"
                    android:textSize="@dimen/txt_size_small"
                    android:textColor="@color/colorGray"/>
                <Spinner
                    android:id="@+id/spinner_medicine_type"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="@dimen/margin_small"
                    />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reminders"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/txt_size_x_large"
                android:textColor="@color/colorBlack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                >

                <Spinner
                    android:id="@+id/spinner_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="@dimen/margin_small"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_small"
                        android:textColor="@color/colorGray"/>
                    <TextView
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="Dose"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_small"
                        android:textColor="@color/colorGray"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frequency_layout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/et_time_layout1"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_small"
                        android:clickable="true"
                        android:focusable="false"
                        android:text="8:00 am"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/txt_size_large" />

                    <EditText
                        android:id="@+id/et_dose_layout1"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:clickable="true"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/frequency_layout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:visibility="gone">
                    <EditText
                        android:id="@+id/et_time_layout2"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="8:00 am"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:focusable="false"
                        android:clickable="true"/>
                    <EditText
                        android:id="@+id/et_dose_layout2"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:clickable="true"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/frequency_layout3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:visibility="gone">
                    <EditText
                        android:id="@+id/et_time_layout3"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="8:00 am"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:focusable="false"
                        android:clickable="true"
                        />
                    <EditText
                        android:id="@+id/et_dose_layout3"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:clickable="true"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/frequency_layout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:visibility="gone">
                    <EditText
                        android:id="@+id/et_time_layout4"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="8:00 am"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:focusable="false"
                        android:clickable="true"/>
                    <EditText
                        android:id="@+id/et_dose_layout4"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="1.0"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:clickable="true"
                        android:inputType="numberDecimal"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:layout_margin="@dimen/margin_small"
                android:textSize="@dimen/txt_size_x_large"
                android:textColor="@color/colorBlack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/margin_normal">
                    <TextView
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="Start date"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_small"
                        android:textColor="@color/colorGray"/>
                    <TextView
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="End date"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_small"
                        android:textColor="@color/colorGray"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="@dimen/margin_normal">
                    <EditText
                        android:id="@+id/et_start_date"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:focusable="false"
                        android:clickable="true"/>
                    <EditText
                        android:id="@+id/et_end_date"
                        android:layout_width="@dimen/textview_width"
                        android:layout_height="wrap_content"
                        android:text="Endless"
                        android:textAlignment="center"
                        android:layout_margin="@dimen/margin_small"
                        android:textSize="@dimen/txt_size_large"
                        android:textColor="@color/colorBlack"
                        android:focusable="false"
                        android:clickable="true"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/margin_small">

                    <CheckBox
                        android:id="@+id/chb_mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon"/>
                    <CheckBox
                        android:id="@+id/chb_tue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tue"/>
                    <CheckBox
                        android:id="@+id/chb_wed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wed"/>
                    <CheckBox
                        android:id="@+id/chb_thu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <CheckBox
                        android:id="@+id/chb_fri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fri"/>
                    <CheckBox
                        android:id="@+id/chb_sat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sat"/>
                    <CheckBox
                        android:id="@+id/chb_sun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sun"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_10"
                    >
                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_size"
                        android:background="@drawable/btn_shape_round"
                        android:text="CANCEL"
                        android:textColor="@color/colorPrimary"
                        android:layout_toLeftOf="@+id/btn_ok"
                        android:layout_margin="@dimen/margin_small"


                        />
                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_size"
                        android:background="@drawable/btn_shape_round"
                        android:text="SAVE"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/margin_small"

                        />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
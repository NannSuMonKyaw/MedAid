<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_small"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
       <ImageView
           android:id="@+id/iv_medicine"
           android:layout_width="@dimen/placeholderImage"
           android:layout_height="@dimen/placeholderImage"
           android:src="@drawable/icon_pill"
           android:layout_centerVertical="true"
           android:layout_marginHorizontal="@dimen/margin_normal"/>

        <TextView
            android:id="@+id/medicineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Becozinc"
            android:layout_toRightOf="@+id/iv_medicine"
            android:textSize="@dimen/txt_size_ex_large"
            android:textColor="@color/colorBlack"
            android:padding="@dimen/padding_4"
            android:layout_marginLeft="@dimen/margin_normal"/>

        <TextView
            android:id="@+id/medicineDosage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineName"
            android:layout_alignLeft="@+id/medicineName"
            android:text="1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_size_x_large"
            android:padding="@dimen/padding_6"
            android:layout_marginHorizontal="@dimen/margin_small"/>

        <TextView
            android:id="@+id/medicineType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/medicineDosage"
            android:layout_below="@+id/medicineName"
            android:text="tablet"
            android:padding="@dimen/padding_4"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_size_x_large"
            android:layout_marginHorizontal="@dimen/margin_small"
            android:visibility="visible" />

        <TextView
            android:id="@+id/medicineFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="three times"
            android:layout_below="@id/medicineDosage"
            android:layout_alignLeft="@+id/medicineName"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_size_normal"
            android:padding="@dimen/padding_4" />

        <TextView
            android:id="@+id/medicineConsecutiveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineType"
            android:layout_toRightOf="@+id/medicineFrequency"
            android:layout_alignTop="@id/medicineFrequency"
            android:text="x 3 days"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/txt_size_normal"
            android:padding="@dimen/padding_4"
            android:layout_marginLeft="@dimen/margin_small"/>
    </RelativeLayout>
</LinearLayout>